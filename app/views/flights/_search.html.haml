.row
  .large-3.small-centered.columns#search_form
    = form_tag '/flights/destinations', :remote => true do |f|
      = label_tag :origin
      = select_tag(:origin, options_from_collection_for_select(@flights, "id", "origin"))
      / = link_to('Cancel', '#', :'data-clear-form' => true, :class => 'button tiny radius alert')
      / = submit_tag 'Search Destinations', :id => 'searchf', :class => 'button tiny radius success'
  .large-9.columns