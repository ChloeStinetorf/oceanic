
= form_for @plane, :remote => true do |f|
  = f.label :name
  = f.text_field :name, :autofocus => true
  = f.label :rows
  = f.number_field :rows
  = f.label :aisles
  = f.number_field :aisles
  = link_to('Cancel', '#', :'data-clear-form' => true, :class => 'button small radius alert form_button')
  = f.submit 'Create Plane', :class => 'button small radius info form_button'
